<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/anime_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/anime_iv"
        app:layout_constraintEnd_toStartOf="@id/anime_media_type_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Naruto" />

    <TextView
        android:id="@+id/anime_media_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/anime_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/anime_title_tv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TV" />

    <ImageView
        android:id="@+id/anime_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/anime_poster_image"
        app:layout_constraintBottom_toTopOf="@id/anime_synopsis_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anime_title_tv"
        tools:layout_width="200dp"
        tools:minHeight="200dp" />

    <TextView
        android:id="@+id/anime_synopsis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/anime_score_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anime_iv"
        tools:text="Moments prior to Naruto Uzumaki's birth, a huge demon known as the Kyuubi, the Nine-Tailed Fox, attacked Konohagakure, the Hidden Leaf Village, and wreaked havoc. In order to put an end to the Kyuubi'." />

    <TextView
        android:id="@+id/anime_airing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/anime_score_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anime_synopsis_tv"
        tools:text="Off Air"/>

    <TextView
        android:id="@+id/anime_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/anime_episodes_tv"
        app:layout_constraintStart_toEndOf="@id/anime_airing_tv"
        app:layout_constraintTop_toBottomOf="@id/anime_synopsis_tv"
        tools:text="8.21"/>

    <TextView
        android:id="@+id/anime_episodes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/anime_score_tv"
        app:layout_constraintTop_toBottomOf="@id/anime_synopsis_tv"
        tools:text="500"/>

</androidx.constraintlayout.widget.ConstraintLayout>